<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    tools:context=".ChatbotActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="167dp"
        android:layout_height="48dp"
        android:text="คุยผ่าน LINE"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_facebook"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/btn_facebook"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/btn_facebook"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/btn_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/btn_facebook" />

    <ImageButton
        android:id="@+id/btn_line"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/btn_line"
        android:cropToPadding="true"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_facebook"
        app:srcCompat="@drawable/btn_line" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="256dp"
        android:layout_height="48dp"
        android:text="คุยผ่าน Messenger"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_facebook"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.522"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />
</android.support.constraint.ConstraintLayout>